@model IEnumerable<AspCoreFirst.Controllers.Players>
<div class="page-header" ng-app="ang">
    <div class="panel panel-success">
        <div class="page-heading">
            <h3 class="panel-title">Тест Ангулар</h3>
        </div>
        <div class="panel-body">
            <table class="table table-striped" ng-controller="playersController">
                <thead>
                    <tr>
                        <td>#</td>
                        <td>Имя</td>
                        <td>Возраст</td>
                        <td>Клуб</td>
                    </tr>
                </thead>
                <tbody>
                <tr ng-repeat="md in model">
                    <td>{{$index+1}}</td>
                    <td>{{md.name}}</td>
                    <td>{{md.club}}</td>
                    <td>{{md.age}}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
@section scripts
{
    <script src="~/lib/angular/angular.min.js"></script>
    <script>
        angular.module("ang", []);
        alert("Hello");
    </script>
<script src="~/Scripts/Controllers/index.js"></script>
}
